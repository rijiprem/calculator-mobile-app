<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"

        xmlns:android="http://schemas.android.com/apk/res/android">
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="sum"
            android:layout_margin="40dp"
            android:background="@drawable/addgradient"
            android:text="ADDITION"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="difference"
            android:layout_margin="40dp"
            android:text="SUBTRACT"
            android:background="@drawable/subgradient"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="product"
            android:layout_margin="40dp"
            android:background="@drawable/mulgradient"
            android:textSize="20dp"
            android:text="MULTIPLICATION"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="division"
            android:layout_margin="40dp"
            android:background="@drawable/divgradient"
            android:text="DIVISION"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
